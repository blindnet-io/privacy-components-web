{
  "compilerOptions": {
    "target": "es2018",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": [
    "packages/prci/dist/**/*",
    "packages/dci/dist/**/*",
    "packages/core/dist/**/*",
    "build/**/*",
    "storybook-static/**/*",
    "**/node_modules/**/*",
    "**/stories-build/**",
    "**/coverage/**"
  ]
}
