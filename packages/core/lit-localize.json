{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en-US",
  "targetLocales": ["fr", "fr-FR", "fr-CA"],
  "tsConfig": "../../tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "./src/components/generated/locales",
    "localeCodesModule": "./src/components/generated/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "../../localization/translations/"
  }
}
